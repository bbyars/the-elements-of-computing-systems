/** 
 * Multiplexor. If sel==1 then out=b else out=a.
 */

CHIP Mux {
    IN a, b, sel;
    OUT out;

    PARTS:
    Not(in=sel, out=notSel);
    And(a=a, b=notSel, out=notSelAndA);
    And(a=b, b=sel, out=bAndSel);
    Or(a=notSelAndA, b=bAndSel, out=out);
}
